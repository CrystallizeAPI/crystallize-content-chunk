{
  "name": "@crystallize/content-transformer",
  "version": "4.0.3",
  "description": "Validation and parsing for Crystallize Content",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src",
    "build": "webpack --mode=development && mv ./dist/toHTML.js ./ && mv ./dist/toText.js ./ && npm run build:react",
    "build:react": "babel ./src/react.jsx --out-file ./react.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run validate && npm run build",
    "dev": "nodemon ./develop",
    "dev:inspect": "nodemon --inspect-brk ./develop",
    "dev:react": "NODE_ENV=development parcel ./public/index.html",
    "validate": "npm run lint && npm run test",
    "prepush": "npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:CrystallizeAPI/crystallize-content-transformer.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CrystallizeAPI/crystallize-content-transformer/issues"
  },
  "homepage": "https://github.com/CrystallizeAPI/crystallize-content-transformer#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.5.5",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^24.9.0",
    "nodemon": "^1.17.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  },
  "dependencies": {
    "html2json": "^1.0.2",
    "is-my-json-valid": "^2.17.2",
    "isarray": "^2.0.4",
    "ow": "^0.4.0",
    "parse5": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  },
  "browserslist": [
    "> 0.5%",
    "IE 10",
    "iOS > 8",
    "Safari > 8"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-plusplus": 0
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
